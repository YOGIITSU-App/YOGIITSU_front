<resources>
  <!-- 시스템 스플래시(안드 12+)를 파란 배경 + 로고로 -->
  <style name="BootTheme" parent="Theme.BootSplash">
    <item name="android:windowSplashScreenBackground">@color/bootsplash_background</item>
    <item name="android:windowSplashScreenAnimatedIcon">@drawable/bootsplash_logo</item>
    <!-- 스플래시 끝난 직후 창 배경(흰색 등 페이지 배경으로 전환) -->
    <item name="android:windowBackground">@color/app_window_background</item>
  </style>

  <!-- 런타임 테마도 v31에서 흰 배경 고정 -->
  <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="android:windowBackground">@color/app_window_background</item>
  </style>
</resources>
